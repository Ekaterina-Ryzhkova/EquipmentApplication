@page
@model EquipmentApplication.Areas.Identity.Pages.Account.RegisterModel
<div class="container">
    <div class="card" style="width: 320px;margin: 0 auto; align-items:center;background-color: #f5f5f5;">
        <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="currentColor" class="bi bi-r-square-fill mb-4 mt-4" viewBox="0 0 16 16">
            <path d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0ZM5.5 4.002h3.11c1.71 0 2.741.973 2.741 2.46 0 1.138-.667 1.94-1.495 2.24L11.5 12H9.98L8.52 8.924H6.836V12H5.5V4.002Zm1.335 1.09v2.777h1.549c.995 0 1.573-.463 1.573-1.36 0-.913-.596-1.417-1.537-1.417H6.835Z" />
        </svg>
        <div class="card-body">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;">Создание аккаунта</h1>
            <form id="Account" method="post">
                <div class="form-group mb-4">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Input.Email, new { @class = "form-control", @placeholder = "Email" })
                        <span asp-validation-for="Input.Email" class="text-danger fs-6 font-monospace"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Input.Password, new { @class = "form-control", @placeholder = "Password" })
                        <span asp-validation-for="Input.Password" class="text-danger fs-6 font-monospace"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Зарегистрироваться</button>
                    </div>
                </div>
            </form>
        </div>
        <p class="mt-5 mb-3 text-muted">© @DateTime.Now.Year</p>
    </div>
</div>
